<resources>
    <declare-styleable name="UnderLineView">
        <attr name="text" format="reference|string" />
        <attr name="textColor" format="reference|integer" />
<!--        <attr name="lineColor" format="reference|integer" />-->
        <attr name="select" format="reference|boolean" />
    </declare-styleable>

    <declare-styleable name="CircleDivisionView">
        <attr name="strokeWidth" format="dimension"/>
        <attr name="dividerSpace" format="integer"/>
        <attr name="counts" format="integer"/>
        <attr name="strokeLineColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="Cookie">
        <attr name="cookieTitleColor" format="color"/>
        <attr name="cookieMessageColor" format="color"/>
        <attr name="cookieActionColor" format="color"/>
        <attr name="cookieBackgroundColor" format="color"/>

        <attr name="cookieTitleSize" format="dimension"/>
        <attr name="cookieMessageSize" format="dimension"/>
        <attr name="cookieActionSize" format="dimension"/>
        <attr name="cookiePadding" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="CrystalRangeSeekbar">
        <attr format="float" name="con_radius"/>
        <attr format="float" name="min_value"/>
        <attr format="float" name="max_value"/>
        <attr format="float" name="min_start_value"/>
        <attr format="float" name="max_start_value"/>
        <attr format="float" name="steps"/>
        <attr format="float" name="gap"/>
        <attr format="float" name="fix_gap"/>
        <attr format="color" name="bar_color"/>
        <attr format="color" name="bar_highlight_color"/>
        <attr format="color" name="left_thumb_color"/>
        <attr format="color" name="left_thumb_color_pressed"/>
        <attr format="reference" name="left_thumb_image"/>
        <attr format="reference" name="left_thumb_image_pressed"/>
        <attr format="color" name="right_thumb_color"/>
        <attr format="color" name="right_thumb_color_pressed"/>
        <attr format="reference" name="right_thumb_image"/>
        <attr format="reference" name="right_thumb_image_pressed"/>
        <attr format="enum" name="position">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr format="enum" name="data_type">
            <enum name="_long" value="0"/>
            <enum name="_double" value="1"/>
            <enum name="_integer" value="2"/>
            <enum name="_float" value="3"/>
            <enum name="_short" value="4"/>
            <enum name="_byte" value="5"/>
        </attr>
    </declare-styleable>

</resources>